<Window x:Class="FuelsenseMonitorApp.DataTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data Table - Fuelsense Monitor Pro" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Background="#FF0D1117">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Table Header -->
        <Border Grid.Row="0" Background="#FF161B22" CornerRadius="12" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📊" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="DATA HISTORY TABLE" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Complete sensor data records with export functionality" 
                                       FontSize="14" Foreground="#FFADB5BD"/>
                            <TextBlock x:Name="RecordCountText" Text="(0 records)" FontSize="14" 
                                       Foreground="#FF00D9FF" Margin="15,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <!-- Table Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="RefreshTableButton" Content="🔄 REFRESH" Foreground="White" 
                            Padding="15,8" Margin="5,0" FontWeight="Bold" Click="RefreshTableButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FF238636" Offset="0"/>
                                <GradientStop Color="#FF1A7F37" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button x:Name="ExportTableButton" Content="📊 EXPORT" Foreground="White" 
                            Padding="15,8" Margin="5,0" FontWeight="Bold" Click="ExportTableButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFFD7E14" Offset="0"/>
                                <GradientStop Color="#FFBC4C00" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button Content="❌ CLOSE" Foreground="White" 
                            Padding="15,8" Margin="5,0" FontWeight="Bold" Click="CloseWindow_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFDA3633" Offset="0"/>
                                <GradientStop Color="#FFCF222E" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Large Data Grid -->
        <Border Grid.Row="1" Background="#FF0D1117" BorderBrush="#FF30363D" 
                BorderThickness="2" CornerRadius="12">
            <DataGrid x:Name="MainDataGrid" AutoGenerateColumns="False" 
                      Background="#FF0D1117" Foreground="#FFADB5BD"
                      BorderThickness="0" GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#FF30363D" VerticalGridLinesBrush="Transparent"
                      AlternatingRowBackground="#FF161B22" RowBackground="#FF0D1117"
                      CanUserAddRows="False" IsReadOnly="True" CanUserDeleteRows="False"
                      HeadersVisibility="Column" ColumnHeaderHeight="50"
                      RowHeight="40" FontSize="14" Margin="10">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FF1F6FEB" Offset="0"/>
                                    <GradientStop Color="#FF0969DA" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Padding" Value="15,10"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#FFADB5BD"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF1F6FEB"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF21262D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="⏰ Timestamp" Binding="{Binding Time, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="180"/>
                    <DataGridTextColumn Header="🔧 Torsi (Nm)" Binding="{Binding Torque, StringFormat='{}{0:F2}'}" Width="*"/>
                    <DataGridTextColumn Header="⛽ BBM (gram)" Binding="{Binding Fuel, StringFormat='{}{0:F2}'}" Width="*"/>
                    <DataGridTextColumn Header="⚡ RPM" Binding="{Binding RPM, StringFormat='{}{0:F0}'}" Width="*"/>
                    <DataGridTextColumn Header="🌡️ Temperature (°C)" Binding="{Binding Temperature, StringFormat='{}{0:F1}'}" Width="*"/>
                    <DataGridTextColumn Header="💨 MAF (g/s)" Binding="{Binding MAF, StringFormat='{}{0:F2}'}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        
        <!-- Table Stats -->
        <Border Grid.Row="2" Background="#FF161B22" CornerRadius="12" Padding="20" Margin="0,15,0,0">
            <UniformGrid Columns="5">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="📊 Total Records" FontSize="12" Foreground="#FFADB5BD" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TotalRecordsCount" Text="0" FontSize="18" FontWeight="Bold" 
                               Foreground="#FF00D9FF" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="🔧 Avg Torque" FontSize="12" Foreground="#FFADB5BD" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="AvgTorqueValue" Text="0.00 Nm" FontSize="18" FontWeight="Bold" 
                               Foreground="#FF00D9FF" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="⛽ Avg BBM" FontSize="12" Foreground="#FFADB5BD" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="AvgFuelValue" Text="0.00 g" FontSize="18" FontWeight="Bold" 
                               Foreground="#FF00D9FF" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="⚡ Max RPM" FontSize="12" Foreground="#FFADB5BD" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="MaxRpmValue" Text="0" FontSize="18" FontWeight="Bold" 
                               Foreground="#FF00D9FF" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="🌡️ Max Temp" FontSize="12" Foreground="#FFADB5BD" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="MaxTempValue" Text="0.0°C" FontSize="18" FontWeight="Bold" 
                               Foreground="#FF00D9FF" HorizontalAlignment="Center"/>
                </StackPanel>
            </UniformGrid>
        </Border>
    </Grid>
</Window>
