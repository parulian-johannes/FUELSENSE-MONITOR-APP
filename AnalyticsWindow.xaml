<Window x:Class="FuelsenseMonitorApp.AnalyticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:scottplot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        Title="Live Analytics Dashboard" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <!-- Modern Gradient Background -->
        <RadialGradientBrush x:Key="AnalyticsBackgroundBrush">
            <GradientStop Color="#0F0F23" Offset="0"/>
            <GradientStop Color="#1A1A2E" Offset="0.5"/>
            <GradientStop Color="#16213E" Offset="1"/>
        </RadialGradientBrush>
        
        <!-- Modern Panel Brush -->
        <LinearGradientBrush x:Key="ModernPanelBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F172A" Offset="0"/>
            <GradientStop Color="#1E293B" Offset="0.5"/>
            <GradientStop Color="#334155" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Border Color -->
        <SolidColorBrush x:Key="BorderColor" Color="#40FFFFFF"/>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1E40AF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Main Container -->
    <Border Background="{StaticResource AnalyticsBackgroundBrush}" 
            CornerRadius="20" 
            BorderBrush="#40FFFFFF" 
            BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="10" Opacity="0.9"/>
        </Border.Effect>
        
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📊" FontSize="20" Foreground="#FFFFFF" Margin="10,0,10,0"/>
                    <TextBlock Text="LIVE ANALYTICS DASHBOARD" FontSize="16" FontWeight="Bold" 
                               Foreground="#FFFFFF" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="🗕" Width="30" Height="30" Margin="5,0" 
                            Style="{StaticResource ModernButtonStyle}" Click="MinimizeButton_Click"/>
                    <Button Content="❌" Width="30" Height="30" Margin="5,0" 
                            Style="{StaticResource ModernButtonStyle}" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
            
            <!-- Header with Session Info -->
            <Border Grid.Row="1" Background="{StaticResource ModernPanelBrush}" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="0,0,0,15"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="🧮" FontSize="18" Margin="0,0,15,0"/>
                        <TextBlock Text="REAL-TIME ANALYTICS" FontSize="18" FontWeight="Bold" 
                                   Foreground="#CCCCCC" VerticalAlignment="Center" FontFamily="Segoe UI">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#CCCCCC" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="SESSION DURATION: " FontSize="11" Foreground="#C080FF" 
                                   VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock x:Name="SessionDurationText" Text="00:00:00" FontSize="13" FontWeight="Bold" 
                                   Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,20,0" FontFamily="Segoe UI"/>
                        <TextBlock Text="DATA NODES: " FontSize="11" Foreground="#C080FF" 
                                   VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock x:Name="DataPointsCount" Text="0" FontSize="13" FontWeight="Bold" 
                                   Foreground="#CCCCCC" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Analytics Content -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                
                <!-- Chart Section -->
                <Border Grid.Row="0" Background="#0A0F1C" 
                        CornerRadius="12" 
                        Padding="20"
                        BorderBrush="#CCCCCC" 
                        BorderThickness="2"
                        Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect Color="#CCCCCC" BlurRadius="12" ShadowDepth="0" Opacity="0.4"/>
                    </Border.Effect>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Chart Title -->
                        <TextBlock Grid.Row="0" Text="📈 SENSOR DATA VISUALIZATION" 
                                   FontSize="14" FontWeight="Bold" Foreground="#CCCCCC" 
                                   HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        
                        <!-- Chart -->
                        <scottplot:WpfPlot x:Name="SensorChart" Grid.Row="1" Background="#0A0F1C"/>
                    </Grid>
                </Border>
                
                <!-- Analytics Cards Section -->
                <Border Grid.Row="1" Background="#0A0F1C" 
                        CornerRadius="12" 
                        Padding="20"
                        BorderBrush="#CCCCCC" 
                        BorderThickness="2">
                    <Border.Effect>
                        <DropShadowEffect Color="#CCCCCC" BlurRadius="12" ShadowDepth="0" Opacity="0.4"/>
                    </Border.Effect>
                    
                    <!-- Cards Grid -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Cards Title -->
                        <TextBlock Grid.Row="0" Text="📊 LIVE STATISTICS" 
                                   FontSize="14" FontWeight="Bold" Foreground="#CCCCCC" 
                                   HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        
                        <!-- Analytics Cards -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Peak RPM Card -->
                            <Border Grid.Row="0" Grid.Column="0" Background="#1E293B" 
                                    BorderBrush="#3B82F6" BorderThickness="2" 
                                    CornerRadius="8" Padding="15" Margin="8">
                                <StackPanel>
                                    <TextBlock Text="⚡ PEAK RPM" FontSize="12" Foreground="#60A5FA" 
                                               FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="MaxRpmText" Text="0" FontSize="24" FontWeight="Bold" 
                                               Foreground="#FFFFFF" FontFamily="Segoe UI" 
                                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Max MAF Card -->
                            <Border Grid.Row="0" Grid.Column="1" Background="#1E293B" 
                                    BorderBrush="#EF4444" BorderThickness="2" 
                                    CornerRadius="8" Padding="15" Margin="8">
                                <StackPanel>
                                    <TextBlock Text="🌬️ MAX MAF" FontSize="12" Foreground="#F87171" 
                                               FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="MaxMafText" Text="0 g/s" FontSize="24" FontWeight="Bold" 
                                               Foreground="#FFFFFF" FontFamily="Segoe UI"
                                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Avg Torque Card -->
                            <Border Grid.Row="0" Grid.Column="2" Background="#1E293B" 
                                    BorderBrush="#10B981" BorderThickness="2" 
                                    CornerRadius="8" Padding="15" Margin="8">
                                <StackPanel>
                                    <TextBlock Text="🔧 AVG TORQUE" FontSize="12" Foreground="#34D399" 
                                               FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="AvgTorqueText" Text="0.0 Nm" FontSize="24" FontWeight="Bold" 
                                               Foreground="#FFFFFF" FontFamily="Segoe UI"
                                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Records Card -->
                            <Border Grid.Row="1" Grid.Column="0" Background="#1E293B" 
                                    BorderBrush="#F59E0B" BorderThickness="2" 
                                    CornerRadius="8" Padding="15" Margin="8">
                                <StackPanel>
                                    <TextBlock Text="📋 RECORDS" FontSize="12" Foreground="#FBBF24" 
                                               FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="TotalRecordsText" Text="0" FontSize="24" FontWeight="Bold" 
                                               Foreground="#FFFFFF" FontFamily="Segoe UI"
                                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Avg Fuel Card -->
                            <Border Grid.Row="1" Grid.Column="1" Background="#1E293B" 
                                    BorderBrush="#8B5CF6" BorderThickness="2" 
                                    CornerRadius="8" Padding="15" Margin="8">
                                <StackPanel>
                                    <TextBlock Text="⛽ AVG FUEL" FontSize="12" Foreground="#A78BFA" 
                                               FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="AvgFuelText" Text="0.0 g" FontSize="24" FontWeight="Bold" 
                                               Foreground="#FFFFFF" FontFamily="Segoe UI"
                                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Max Temp Card -->
                            <Border Grid.Row="1" Grid.Column="2" Background="#1E293B" 
                                    BorderBrush="#06B6D4" BorderThickness="2" 
                                    CornerRadius="8" Padding="15" Margin="8">
                                <StackPanel>
                                    <TextBlock Text="🌡️ MAX TEMP" FontSize="12" Foreground="#22D3EE" 
                                               FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="MaxTempText" Text="0°C" FontSize="24" FontWeight="Bold" 
                                               Foreground="#FFFFFF" FontFamily="Segoe UI"
                                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Status Bar -->
            <Border Grid.Row="3" Background="#10000000" 
                    CornerRadius="15" 
                    Padding="20"
                    BorderBrush="#40FFFFFF" 
                    BorderThickness="1"
                    Margin="0,15,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="3" Opacity="0.6"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" x:Name="StatusText" 
                               Text="📊 Analytics Dashboard - Real-time monitoring active" 
                               Foreground="#FFFFFF" FontSize="13" VerticalAlignment="Center" 
                               FontFamily="Segoe UI">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FFFFFF" BlurRadius="5" ShadowDepth="0" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="RefreshButton" Content="🔄 REFRESH" 
                                Style="{StaticResource ModernButtonStyle}"
                                Padding="15,8" Margin="8,0" FontSize="12" 
                                Click="RefreshButton_Click"/>
                        <Button x:Name="ExportButton" Content="📤 EXPORT" 
                                Style="{StaticResource ModernButtonStyle}"
                                Padding="15,8" Margin="8,0" FontSize="12" 
                                Click="ExportButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>