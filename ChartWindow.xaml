<Window x:Class="FuelsenseMonitorApp.ChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:scottplot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        Title="Live Chart - Fuelsense Monitor Pro" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Background="#FF0D1117">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Chart Header -->
        <Border Grid.Row="0" Background="#FF161B22" CornerRadius="12" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ“ˆ" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="LIVE SENSOR ANALYTICS" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Real-time data visualization and monitoring" FontSize="14" Foreground="#FFADB5BD"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Chart Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="PauseChartButton" Content="â¸ï¸ PAUSE" Foreground="White" 
                            Padding="15,8" Margin="5,0" FontWeight="Bold" Click="PauseChartButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFFD7E14" Offset="0"/>
                                <GradientStop Color="#FFBC4C00" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button x:Name="ResetZoomButton" Content="ðŸ” RESET ZOOM" Foreground="White" 
                            Padding="15,8" Margin="5,0" FontWeight="Bold" Click="ResetZoomButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FF7C3AED" Offset="0"/>
                                <GradientStop Color="#FF6F2DA8" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button Content="âŒ CLOSE" Foreground="White" 
                            Padding="15,8" Margin="5,0" FontWeight="Bold" Click="CloseWindow_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFDA3633" Offset="0"/>
                                <GradientStop Color="#FFCF222E" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Large Chart Area -->
        <Border Grid.Row="1" Background="#FF0D1117" BorderBrush="#FF30363D" 
                BorderThickness="2" CornerRadius="12">
            <scottplot:WpfPlot x:Name="MainChart" Background="#FF0D1117"/>
        </Border>
        
        <!-- Chart Legend and Info -->
        <Border Grid.Row="2" Background="#FF161B22" CornerRadius="12" Padding="20" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Legend -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Legend: " FontSize="14" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    
                    <Border Background="#FF00D9FF" Width="20" Height="4" CornerRadius="2" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Text="Torsi (Nm)" Foreground="#FFADB5BD" FontSize="12" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    
                    <Border Background="#FFDA3633" Width="20" Height="4" CornerRadius="2" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Text="BBM (gram)" Foreground="#FFADB5BD" FontSize="12" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    
                    <Border Background="#FFFD7E14" Width="20" Height="4" CornerRadius="2" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Text="RPM (/100)" Foreground="#FFADB5BD" FontSize="12" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    
                    <Border Background="#FF1F6FEB" Width="20" Height="4" CornerRadius="2" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Text="Temperature (Â°C)" Foreground="#FFADB5BD" FontSize="12" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    
                    <Border Background="#FF7C3AED" Width="20" Height="4" CornerRadius="2" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Text="MAF (g/s)" Foreground="#FFADB5BD" FontSize="12" VerticalAlignment="Center" Margin="0,0,20,0"/>
                </StackPanel>
                
                <!-- Chart Info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="ChartStatusText" Text="Real-time monitoring active" 
                               FontSize="14" Foreground="#FF00D9FF" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <TextBlock x:Name="DataPointsText" Text="Data Points: 0" 
                               FontSize="12" Foreground="#FFADB5BD" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
