<Window x:Class="FuelsenseMonitorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:scottplot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        xmlns:controls="clr-namespace:FuelsenseMonitorApp.Controls"
        Title="Fuelsense Monitor Pro - Next Gen" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <!-- Modern Colorful Theme -->
        <RadialGradientBrush x:Key="MainBackgroundBrush">
            <GradientStop Color="#0F0F23" Offset="0"/>
            <GradientStop Color="#1A1A2E" Offset="0.5"/>
            <GradientStop Color="#16213E" Offset="1"/>
        </RadialGradientBrush>
        
        <!-- Enhanced Modern Color Palette -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#1E40AF"/>
        <SolidColorBrush x:Key="SecondaryPurple" Color="#7C3AED"/>
        <SolidColorBrush x:Key="AccentCyan" Color="#0891B2"/>
        <SolidColorBrush x:Key="AccentPink" Color="#E11D48"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#059669"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#EA580C"/>
        <SolidColorBrush x:Key="AccentIndigo" Color="#4338CA"/>
        
        <SolidColorBrush x:Key="PanelBackground" Color="#1E293B"/>
        <SolidColorBrush x:Key="BorderColor" Color="#64748B"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextMuted" Color="#94A3B8"/>
        
        <!-- Enhanced Vibrant Gradient Brushes -->
        <LinearGradientBrush x:Key="ModernPanelBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1E293B" Offset="0"/>
            <GradientStop Color="#334155" Offset="0.5"/>
            <GradientStop Color="#475569" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1E40AF" Offset="0"/>
            <GradientStop Color="#3B82F6" Offset="0.3"/>
            <GradientStop Color="#06B6D4" Offset="0.7"/>
            <GradientStop Color="#0EA5E9" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#7C3AED" Offset="0"/>
            <GradientStop Color="#A855F7" Offset="0.3"/>
            <GradientStop Color="#C084FC" Offset="0.7"/>
            <GradientStop Color="#E879F9" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="WarmGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EA580C" Offset="0"/>
            <GradientStop Color="#F97316" Offset="0.3"/>
            <GradientStop Color="#FB923C" Offset="0.7"/>
            <GradientStop Color="#FDBA74" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="CoolGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#059669" Offset="0"/>
            <GradientStop Color="#10B981" Offset="0.3"/>
            <GradientStop Color="#34D399" Offset="0.7"/>
            <GradientStop Color="#6EE7B7" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Modern Button Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#1E40AF" BlurRadius="12" ShadowDepth="0" Opacity="0.6"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentGradient}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource SecondaryPurple}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource WarmGradient}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="#EA580C" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource CoolGradient}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentIndigo}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Speedometer Styles with Individual Colors -->
        <Style x:Key="RpmSpeedometerStyle" TargetType="controls:SpeedometerControl">
            <Setter Property="Tag" Value="Blue"/>
        </Style>
        <Style x:Key="TorqueSpeedometerStyle" TargetType="controls:SpeedometerControl">
            <Setter Property="Tag" Value="Purple"/>
        </Style>
        <Style x:Key="SpeedSpeedometerStyle" TargetType="controls:SpeedometerControl">
            <Setter Property="Tag" Value="Red"/>
        </Style>
        <Style x:Key="MafSpeedometerStyle" TargetType="controls:SpeedometerControl">
            <Setter Property="Tag" Value="Cyan"/>
        </Style>
        <Style x:Key="TempSpeedometerStyle" TargetType="controls:SpeedometerControl">
            <Setter Property="Tag" Value="Orange"/>
        </Style>
        <Style x:Key="FuelSpeedometerStyle" TargetType="controls:SpeedometerControl">
            <Setter Property="Tag" Value="Green"/>
        </Style>
    </Window.Resources>
    
    <!-- Futuristic Window Frame -->
    <Border Background="{StaticResource MainBackgroundBrush}" 
            CornerRadius="20" 
            BorderBrush="#40FFFFFF" 
            BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="10" Opacity="0.9"/>
        </Border.Effect>
        
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Height="40" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="âš¡" FontSize="20" Foreground="#FFFFFF" Margin="10,0,10,0"/>
                    <TextBlock Text="FUELSENSE MONITOR PRO" FontSize="16" FontWeight="Bold" 
                               Foreground="#FFFFFF" VerticalAlignment="Center"
                               FontFamily="Segoe UI"/>
                    <TextBlock Text="NEXT-GEN" FontSize="10" Foreground="#CCCCCC" 
                               VerticalAlignment="Bottom" Margin="10,0,0,2"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Minimize Button -->
                    <Button Width="35" Height="30" Margin="3,0" Click="MinimizeButton_Click"
                            Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" 
                                        CornerRadius="6" Padding="8">
                                    <Path x:Name="icon" Fill="#CCCCCC" Stretch="Uniform" 
                                          Width="14" Height="14" 
                                          Data="M2,7 L10,7 L10,8 L2,8 Z"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#3498DB"/>
                                        <Setter TargetName="icon" Property="Fill" Value="#FFFFFF"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#3498DB" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#2980B9"/>
                                        <Setter TargetName="icon" Property="Fill" Value="#FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <!-- Close Button -->
                    <Button Width="35" Height="30" Margin="3,0" Click="CloseButton_Click"
                            Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" 
                                        CornerRadius="6" Padding="8">
                                    <Path x:Name="icon" Stroke="#CCCCCC" StrokeThickness="1.5" 
                                          Stretch="Uniform" Width="12" Height="12" 
                                          Data="M1,1 L11,11 M1,11 L11,1"/>
                                    <Border.Effect>
                                        <DropShadowEffect Color="#FF0000" BlurRadius="0" ShadowDepth="0" Opacity="0"/>
                                    </Border.Effect>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#E74C3C"/>
                                        <Setter TargetName="icon" Property="Stroke" Value="#FFFFFF"/>
                                        <Setter TargetName="icon" Property="StrokeThickness" Value="2"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#E74C3C" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#C0392B"/>
                                        <Setter TargetName="icon" Property="Stroke" Value="#FFFFFF"/>
                                        <Setter TargetName="icon" Property="StrokeThickness" Value="2.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- RPM Alert Notification Panel -->
            <Border x:Name="RpmAlertPanel" Grid.Row="1" 
                    Background="#E74C3C" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="0,0,0,10"
                    BorderBrush="#C0392B" 
                    BorderThickness="2"
                    Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect Color="#E74C3C" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Warning Icon -->
                    <Border Grid.Column="0" Background="#FFFFFF" 
                            Width="40" Height="40" CornerRadius="20" 
                            Margin="0,0,15,0" VerticalAlignment="Center">
                        <Path Fill="#E74C3C" Stretch="Uniform" 
                              Width="24" Height="24"
                              Data="M12,2 L21,20 L3,20 Z M12,8 L12,14 M12,16 L12,18"
                              Stroke="#E74C3C" StrokeThickness="2"/>
                    </Border>
                    
                    <!-- Alert Message -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="âš ï¸ HIGH RPM WARNING!" 
                                   FontSize="16" FontWeight="Bold" 
                                   Foreground="#FFFFFF" 
                                   FontFamily="Segoe UI">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="3" ShadowDepth="2" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="RpmAlertText" 
                                   Text="Engine RPM has exceeded 5000! Monitor engine temperature and performance." 
                                   FontSize="12" 
                                   Foreground="#FFE5E5" 
                                   FontFamily="Segoe UI Light"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <!-- Close Alert Button -->
                    <Button Grid.Column="2" Content="âœ•" 
                            Width="25" Height="25" 
                            Background="Transparent" 
                            BorderBrush="Transparent" 
                            Foreground="#FFFFFF" 
                            FontSize="14" FontWeight="Bold"
                            VerticalAlignment="Top"
                            Click="CloseRpmAlert_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#40FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Clean Header -->
            <Border x:Name="HeaderBorder" Grid.Row="2" 
                    Background="{StaticResource ModernPanelBrush}" 
                    CornerRadius="8" 
                    Padding="25" 
                    Margin="0,0,0,15"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸš—" FontSize="28" Margin="0,0,20,0"/>
                        <StackPanel>
                            <TextBlock Text="FUELSENSE MONITOR" FontSize="26" FontWeight="Bold" 
                                       Foreground="White" FontFamily="Segoe UI">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#FFFFFF" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="Advanced Engine Monitoring System v3.0" FontSize="13" 
                                       Foreground="#E0E0E0" FontFamily="Segoe UI Light"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,25,0">
                                <TextBlock Text="CONNECTION" FontSize="10" Foreground="#E0E0E0" FontWeight="Bold"/>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse x:Name="ConnectionStatus" Width="12" Height="12" Fill="#CCCCCC" Margin="0,0,8,0">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#CCCCCC" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock x:Name="ConnectionText" Text="OFFLINE" FontSize="13" 
                                               FontWeight="Bold" Foreground="White" FontFamily="Segoe UI"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="TIME" FontSize="10" Foreground="#E0E0E0" FontWeight="Bold"/>
                                <TextBlock x:Name="SessionTime" Text="00:00:00" FontSize="13" FontWeight="Bold" 
                                           Foreground="White" FontFamily="Segoe UI"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Control Panel -->
            <Border Grid.Row="3" Background="{StaticResource ModernPanelBrush}" 
                    CornerRadius="15" 
                    Padding="15" 
                    Margin="0,0,0,15"
                    BorderBrush="#20FFFFFF" 
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                </Border.Effect>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŽ›ï¸ CONTROL CENTER" FontSize="14" FontWeight="Bold" 
                               Foreground="#CCCCCC" VerticalAlignment="Center" 
                               Margin="0,0,30,0" FontFamily="Segoe UI">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#CCCCCC" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <!-- Main Control Buttons -->
                    <Button x:Name="StartButton" Content="â–¶ï¸ START SCAN" 
                            Style="{StaticResource ModernButtonStyle}"
                            Padding="25,12" Margin="8,0" FontSize="14" FontWeight="Bold"
                            Click="StartButton_Click"/>
                    <Button x:Name="StopButton" Content="â¹ï¸ STOP SCAN" 
                            Style="{StaticResource ModernButtonStyle}"
                            Padding="25,12" Margin="8,0" FontSize="14" FontWeight="Bold"
                            Click="StopButton_Click" IsEnabled="False"/>
                    <Button x:Name="ClearDataButton" Content="ðŸ—‘ï¸ CLEAR DATA" 
                            Style="{StaticResource ModernButtonStyle}"
                            Padding="20,12" Margin="8,0" FontSize="13"
                            Click="ClearDataButton_Click"/>
                    <Button x:Name="ResetSpeedometersButton" Content="ðŸ”„ RESET METERS" 
                            Style="{StaticResource ModernButtonStyle}"
                            Padding="20,12" Margin="8,0" FontSize="13"
                            Click="ResetSpeedometersButton_Click"/>
                    <Button x:Name="ExportDataButton" Content="ðŸ’¾ EXPORT DATA" 
                            Style="{StaticResource ModernButtonStyle}"
                            Padding="20,12" Margin="8,0" FontSize="13"
                            Click="ExportDataButton_Click"/>
                    <Button x:Name="TestRpmAlertButton" Content="âš ï¸ TEST RPM ALERT" 
                            Style="{StaticResource ActionButtonStyle}"
                            Padding="20,12" Margin="8,0" FontSize="13"
                            Click="TestRpmAlert_Click"/>
                </StackPanel>
            </Border>
            
            <!-- Speedometer Dashboard -->
            <Border Grid.Row="4" Background="{StaticResource ModernPanelBrush}" 
                    CornerRadius="15" 
                    Padding="20" 
                    Margin="0,0,0,15"
                    BorderBrush="#20FFFFFF" 
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#FFFFFF" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Speedometers Panel -->
                    <Border Grid.Column="0" Background="#10000000" 
                            CornerRadius="12" 
                            Padding="25" 
                            Margin="0,0,15,0"
                            BorderBrush="#30FFFFFF" 
                            BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Live Analytics Header -->
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ“Š" FontSize="18" Margin="0,0,15,0"/>
                                    <TextBlock Text="LIVE ANALYTICS DASHBOARD" FontSize="18" FontWeight="Bold" 
                                               Foreground="#FFFFFF" VerticalAlignment="Center" FontFamily="Segoe UI">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="#FFFFFF" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button x:Name="OpenChartButton" Content="ðŸ“ˆ CHART VIEW" 
                                            Style="{StaticResource ModernButtonStyle}"
                                            Padding="15,8" Margin="8,0" FontSize="12" 
                                            Click="OpenChartButton_Click"/>
                                    <Button x:Name="OpenAnalyticsButton" Content="ðŸ“Š ANALYTICS" 
                                            Style="{StaticResource ModernButtonStyle}"
                                            Padding="15,8" Margin="8,0" FontSize="12" 
                                            Click="OpenAnalyticsButton_Click"/>
                                    <Button x:Name="OpenDataTableButton" Content="ðŸ“‹ DATA TABLE" 
                                            Style="{StaticResource ModernButtonStyle}"
                                            Padding="15,8" Margin="8,0" FontSize="12" 
                                            Click="OpenDataTableButton_Click"/>
                                    <Button x:Name="OpenSettingsButton" Content="âš™ï¸ SETTINGS" 
                                            Style="{StaticResource ModernButtonStyle}"
                                            Padding="15,8" Margin="8,0" FontSize="12" 
                                            Click="OpenSettingsButton_Click"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Speedometers Grid -->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- RPM Speedometer -->
                                <Viewbox Grid.Row="0" Grid.Column="0" Margin="5" Stretch="Uniform">
                                    <controls:SpeedometerControl x:Name="RpmSpeedometer"
                                                                 Style="{StaticResource RpmSpeedometerStyle}"
                                                                 Title="âš¡ RPM"
                                                                 Unit="rpm"
                                                                 MinValue="0"
                                                                 MaxValue="8000"
                                                                 Value="0"/>
                                </Viewbox>
                                
                                <!-- Torsi Speedometer -->
                                <Viewbox Grid.Row="0" Grid.Column="1" Margin="5" Stretch="Uniform">
                                    <controls:SpeedometerControl x:Name="TorsiSpeedometer"
                                                                 Style="{StaticResource TorqueSpeedometerStyle}"
                                                                 Title="ðŸ”§ TORSI"
                                                                 Unit="Nm"
                                                                 MinValue="0"
                                                                 MaxValue="500"
                                                                 Value="0"/>
                                </Viewbox>
                                
                                <!-- Vehicle Speed Speedometer -->
                                <Viewbox Grid.Row="0" Grid.Column="2" Margin="5" Stretch="Uniform">
                                    <controls:SpeedometerControl x:Name="SpeedSpeedometer"
                                                                 Style="{StaticResource RpmSpeedometerStyle}"
                                                                 Title="ðŸŽï¸ SPEED"
                                                                 Unit="km/h"
                                                                 MinValue="0"
                                                                 MaxValue="200"
                                                                 Value="0"/>
                                </Viewbox>
                                
                                <!-- Temperature Speedometer -->
                                <Viewbox Grid.Row="1" Grid.Column="0" Margin="5" Stretch="Uniform">
                                    <controls:SpeedometerControl x:Name="TempSpeedometer"
                                                                 Style="{StaticResource TempSpeedometerStyle}"
                                                                 Title="ðŸŒ¡ï¸ TEMP"
                                                                 Unit="Â°C"
                                                                 MinValue="0"
                                                                 MaxValue="150"
                                                                 Value="0"/>
                                </Viewbox>
                                
                                <!-- MAF Speedometer -->
                                <Viewbox Grid.Row="1" Grid.Column="1" Margin="5" Stretch="Uniform">
                                    <controls:SpeedometerControl x:Name="MafSpeedometer"
                                                                 Style="{StaticResource MafSpeedometerStyle}"
                                                                 Title="ðŸŒ¬ï¸ MAF"
                                                                 Unit="g/s"
                                                                 MinValue="0"
                                                                 MaxValue="100"
                                                                 Value="0"/>
                                </Viewbox>
                                
                                <!-- BBM Speedometer -->
                                <Viewbox Grid.Row="1" Grid.Column="2" Margin="5" Stretch="Uniform">
                                    <controls:SpeedometerControl x:Name="BbmSpeedometer"
                                                                 Style="{StaticResource FuelSpeedometerStyle}"
                                                                 Title="â›½ BBM"
                                                                 Unit="L/h"
                                                                 MinValue="0"
                                                                 MaxValue="50"
                                                                 Value="0"/>
                                </Viewbox>
                                
                            </Grid>
                        </Grid>
                    </Border>
                
                    <!-- Telemetry Control Panel -->
                    <Border Grid.Column="1" Background="#10000000" 
                            CornerRadius="12" 
                            Padding="15"
                            BorderBrush="#30FFFFFF" 
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel>
                                <TextBlock Text="ðŸ“¡ TELEMETRY MONITOR" FontSize="16" FontWeight="Bold" 
                                           Foreground="#CCCCCC" HorizontalAlignment="Center" 
                                           Margin="0,0,0,15" FontFamily="Segoe UI">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#CCCCCC" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                    </TextBlock.Effect>
